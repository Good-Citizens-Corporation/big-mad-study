{
  "name": "big-mad-study",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:e2e": "./scripts/test-e2e.sh",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage",
    "format": "prettier --write .",
    "sonar": "sonar-scanner",
    "precommit": "yarn typecheck && yarn lint:fix && yarn format && yarn test",
    "prepush": "yarn precommit && yarn test:e2e && yarn sonar",
    "ci": "yarn lint && yarn typecheck && yarn test:ci && yarn build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@google-cloud/firestore": "^8.0.0",
    "next": "16.1.1",
    "openai": "^6.15.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "twilio": "^5.11.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "husky": "^8.0.0",
    "jsdom": "^27.3.0",
    "prettier": "^3.7.4",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.16"
  }
}
